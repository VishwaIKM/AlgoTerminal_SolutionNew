<Window x:Class="AlgoTerminal.View.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgoTerminal.View"
        mc:Ignorable="d"
        Title="About" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="New Version: " FontWeight="Bold" />
                    <Label Content="{Binding NewVersion}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Current Version: " FontWeight="Bold" />
                    <Label Content="{Binding CurrentVersion}" />
                </StackPanel>
                <Separator />
                <Label Content="Release Notes: " FontWeight="Bold" />
                <Label Content="{Binding ReleaseInfo}" />
                <Separator />
                <Label>
                  
                </Label>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
